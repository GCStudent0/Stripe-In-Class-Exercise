<div class="container">
    <h2 class="text-center" style="margin-top: 43px; margin-bottom: 25px;">{{title}}</h2>
    <form class="w-50 m-auto" method="post" enctype="multipart/form-data"
        style="border: 1px solid rgb(92, 231, 207); border-radius: 5px; padding: 24px; margin-top: 12px;">
        <div class="mb-3">
            <label for="title" class="form-label">Course Title</label>
            <input type="text" class="form-control" id="title" name="courseTitle" aria-describedby="nameHelp">
        </div>
        <div class="mb-3">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="coursePrice" aria-describedby="nameHelp" step="0.001" min="0" required>
            
        </div>
        <div class="mb-3">
            <label for="image">Image</label>
            <input type="file" class="form-control" id="image" name="image" accept="/image*" aria-describedby="nameHelp" alt="Error loading image" required>
        </div>
        <div class="form-floating">
  <textarea class="form-control" placeholder="Write description about course here" name="courseDesc" id="courseDesc" style="height: 100px"></textarea>
  <label for="courseDesc">Description</label>
</div>
        <div class="d-flex justify-content-center mt-5">
    <button class="btn btn-info px-4 py-2">Create Course</button>
</div>
    </form>
</div>